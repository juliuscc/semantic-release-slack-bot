{
	"name": "semantic-release-slack-bot",
	"version": "0.0.0-semantically-released",
	"description": "A slack bot for semantic-release notifying release statuses",
	"main": "index.js",
	"private": false,
	"files": [
		"lib",
		"index.js"
	],
	"engines": {
		"node": ">=8"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/juliuscc/semantic-release-slack-bot.git"
	},
	"keywords": [
		"semantic-release",
		"slack",
		"bot",
		"slack-bot",
		"release-notification",
		"release"
	],
	"contributors": [
		"Julius Celik <julius.cc@hotmail.com>",
		"Hannes Rabo <hannes.rabo@gmail.com>"
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/juliuscc/semantic-release-slack-bot/issues"
	},
	"homepage": "https://github.com/juliuscc/semantic-release-slack-bot#readme",
	"scripts": {
		"commit": "git-cz",
		"lint": "eslint lib index.js",
		"prettier": "prettier --write --list-different '**/*.js?(on)'",
		"semantic-release": "semantic-release"
	},
	"dependencies": {
		"@semantic-release/error": "^2.2.0",
		"node-fetch": "^2.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^7.5.0",
		"commitizen": "^4.0.3",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.16.4",
		"semantic-release": "^15.13.3"
	},
	"peerDependencies": {
		"semantic-release": ">=11.0.0 <16.0.0"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"eslintConfig": {
		"extends": [
			"standard",
			"prettier"
		],
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": 2
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"tabWidth": 4
	}
}
